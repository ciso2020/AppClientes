<div class="row">
  {{#each notes}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
         Codigo: {{ cli_codigo_cliente }} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
        </h4>
        <p>Nombres: {{ cli_nombre1 }} {{ cli_nombre2 }} </p>
        <p>Apellidos: {{ cli_apellido1 }} {{ cli_apellido2 }} {{ cli_apellido_casada }}</p>
        <p>Direccion: {{ cli_direccion }} </p>
        <p>Telefonos: {{ cli_telefono1 }} {{ cli_telefono2 }}</p>
        <p>Dpi: {{ cli_dpi }} </p>
        <p>Fecha Nacimiento: {{ cli_fecha_nacimiento }}</p>
        <!-- DELETE REQUEST -->
        <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hello {{user.name}}</h1>
      <p clsss="lead">Aun no hay Clientes...</p>
      <a href="/notes/add" class="btn btn-success btn-block">Quieres crear uno...!</a>
    </div>
  </div>
  {{/each}}
</div>