<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>Nuevo Cliente</h3>
    </div>
    <div class="card-body">
      <form action="/notes/new-note" method="POST">
        <div class="form-group">
          <input type="text" name="cli_codigo_cliente" class="form-control" placeholder="Codigo de Cliente" autofocus/>
        </div>
        <div class="form-group">
          <textarea name="cli_nombre1" class="form-control" placeholder="Nombre1"></textarea>
          <textarea name="cli_nombre2" class="form-control" placeholder="Nombre2"></textarea>
          <textarea name="cli_apellido1" class="form-control" placeholder="Apellido1"></textarea>
          <textarea name="cli_apellido2" class="form-control" placeholder="Apellido2"></textarea>
          <textarea name="cli_apellido_casada" class="form-control" placeholder="Apellido Casada"></textarea>
          <textarea name="cli_direccion" class="form-control" placeholder="Direccion"></textarea>
          <textarea name="cli_telefono1" class="form-control" placeholder="Telefono1"></textarea>
          <textarea name="cli_telefono2" class="form-control" placeholder="Telefono2"></textarea>
          <textarea name="cli_dpi" class="form-control" placeholder="DPI"></textarea>
          <textarea name="cli_fecha_nacimiento" class="form-control" placeholder="dd/mm/yyyy" ></textarea> 
          <!-- <input type="text" name="cli_fecha_nacimiento" id="fecha" class="form-control" placeholder="dd/mm/yyyy" readonly />  -->
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

