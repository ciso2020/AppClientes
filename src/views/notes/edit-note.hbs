{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{text}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}

<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>Edit Cliente</h3>
    </div>
    <div class="card-body">
      <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <input type="text" name="cli_codigo_cliente" class="form-control" value="{{note.cli_codigo_cliente}}"/>
        </div>
        <div class="form-group">
          <textarea name="cli_nombre1" class="form-control">{{note.cli_nombre1}}</textarea>
          <textarea name="cli_nombre2" class="form-control">{{note.cli_nombre2}}</textarea>
          <textarea name="cli_apellido1" class="form-control">{{note.cli_apellido1}}</textarea>
          <textarea name="cli_apellido2" class="form-control">{{note.cli_apellido2}}</textarea>
          <textarea name="cli_apellido_casada" class="form-control">{{cli_note.apellido_casada}}</textarea>
          <textarea name="cli_direccion" class="form-control">{{note.cli_direccion}}</textarea>
          <textarea name="cli_telefono1" class="form-control">{{note.cli_telefono1}}</textarea>
          <textarea name="cli_telefono2" class="form-control">{{note.cli_telefono2}}</textarea>
          <textarea name="cli_dpi" class="form-control">{{note.cli_dpi}}</textarea>
          <textarea name="cli_fecha_nacimiento" class="form-control">{{note.cli_fecha_nacimiento}}</textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
